.home{
  height: 100vh; /* 设置容器高度为整个视窗高度 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 39px;
  box-sizing: border-box;
}

.content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  font-size: 28px;
  color: #7C4A28;
  font-family: Kaiti SC;
}
.desc{
  margin-top: 32rpx;
  color: #7C4A28;
  font-size: 16px;
  text-align: center;
}

.pic{
  margin-top: 80rpx;
  width: 251px;
height: 210px;
}

.start-btn {
  background-image: url('data:image/png;base64,');
  width: 640rpx;
  height: 80rpx;
  background-size: 640rpx 80rpx;
  line-height: 44px;
  border-radius: 4rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}
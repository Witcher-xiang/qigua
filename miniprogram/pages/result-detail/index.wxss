.result-detail-wrapper {
  height: 100vh;
  /* 设置容器高度为整个视窗高度 */
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.result-detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 359px;
  height: 515px;
  background-image: url('https://fortune-1258445350.cos.ap-nanjing.myqcloud.com/WechatIMG7.png');
}

.result-detail-box-header {
  width: 280px;
  height: 36px;
  text-align: center;
  line-height: 36px;
  margin-top: 30px;
  background-image: url("https://fortune-1258445350.cos.ap-nanjing.myqcloud.com/WechatIMG9.png");
}

.result-detail-box-card {
  width: 80vw;
  margin-top: 12px;
}
.result-detail-box-card-content {
  width: 280px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.result-detail-box-card-content-divination{
  width: 72px;
  height: 72px;
  background-image: url('https://fortune-1258445350.cos.ap-nanjing.myqcloud.com/WechatIMG29.png');
}
.result-detail-box-card-content-text{
  color: #7C4A28;
}

.result-detail-btn-container {
  width: 85vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.result-detail-back-btn {
  text-align: center;
  line-height: 47px;
  width: 153px;
  height: 47px;
  background-image: url('https://fortune-1258445350.cos.ap-nanjing.myqcloud.com/WechatIMG34.png');
  color: #7C4A28;
}

.result-detail-again-btn {
  text-align: center;
  line-height: 47px;
  width: 153px;
  height: 47px;
  background-image: url('https://fortune-1258445350.cos.ap-nanjing.myqcloud.com/WechatIMG38.png');
  color: #fff;
}

.btn {


  height: 44px;
  width: 321px;
  line-height: 44px;
  border-radius: 4rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;

}